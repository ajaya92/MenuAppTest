<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bImageView"
        android:layout_width="wrap_content"
        android:layout_height="233dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/breakfast" />

    <ImageView
        android:id="@+id/lImageView"
        android:layout_width="wrap_content"
        android:layout_height="231dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="241dp"
        app:srcCompat="@drawable/lunch" />

    <ImageView
        android:id="@+id/bevImageView"
        android:layout_width="247dp"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/starbucks" />

    <TextView
        android:id="@+id/breakView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-1dp"
        android:lineSpacingExtra="14sp"
        android:text="Breakfast"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/lunchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lImageView"
        android:layout_marginBottom="-300dp"
        android:text="Lunch"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/bevView"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bevImageView"
        android:layout_alignEnd="@+id/lunchView"
        android:layout_marginEnd="-73dp"
        android:layout_marginBottom="-93dp"
        android:text="Beverages"
        android:textSize="30sp" />

</RelativeLayout>